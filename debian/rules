DEB_CONFIGURE_EXTRA_FLAGS += \
			--with-gnome-distributor=Debian \
			--with-pnp-ids-path=/usr/share/hwdata/pnp.ids \
			--disable-scrollkeeper \
			--disable-gtk-doc \
			--disable-gnome-about \
			--disable-desktop-docs

